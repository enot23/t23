@model ToDo.Models.CustomList

@{
    ViewBag.Title = "Delete List";
}

<h2>Delete List</h2>

<h3>
    Are you sure you want to delete this?
    All tasks in this list will be deleted
</h3>
<div>
    <h4>Custom List</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HideCompleted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HideCompleted)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-warning" href="javascript:history.go(-1)">Back</a>
        </div>
    }
</div>
